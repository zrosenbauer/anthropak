{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:bin": {
      "dependsOn": ["build"],
      "outputs": ["bin/**"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "typecheck": {
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "//#lint:fix": {
      "cache": false
    },
    "//#format:fix": {
      "cache": false
    }
  }
}
