{
  "name": "anthropak",
  "version": "0.1.0",
  "description": "CLI tool to manage plugin dependencies for Claude Code plugins",
  "keywords": [
    "anthropic",
    "claude",
    "claude-code",
    "cli",
    "dependencies",
    "plugins"
  ],
  "homepage": "https://github.com/zrosenbauer/anthropak#readme",
  "bugs": {
    "url": "https://github.com/zrosenbauer/anthropak/issues"
  },
  "license": "MIT",
  "author": "Zach Rosenbauer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zrosenbauer/anthropak.git",
    "directory": "packages/cli"
  },
  "bin": {
    "anthropak": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build:assets": "./scripts/build-assets.ts",
    "prebuild": "pnpm build:assets",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "typecheck": "tsc --build",
    "clean": "rimraf dist bin src/.generated scripts/*.tsbuildinfo"
  },
  "dependencies": {
    "@anthropak/utils": "workspace:*",
    "@clack/prompts": "^1.0.0",
    "es-toolkit": "^1.44.0",
    "ts-pattern": "^5.5.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^24.10.10",
    "@types/yargs": "^17.0.33",
    "rimraf": "^6.1.2",
    "tsdown": "^0.9.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
